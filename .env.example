# -- MIGA Core ----------------------------------------------------------------
MIGA_ENV=development
MIGA_LOG_LEVEL=INFO
MIGA_GATEWAY_PORT=8000
MIGA_REDIS_URL=redis://redis:6379/0

# -- Microsoft Entra ID (JWT Auth) --------------------------------------------
ENTRA_TENANT_ID=
ENTRA_CLIENT_ID=
ENTRA_CLIENT_SECRET=
ENTRA_AUTHORITY=https://login.microsoftonline.com/${ENTRA_TENANT_ID}

# -- AGNTCY -------------------------------------------------------------------
AGNTCY_DIRECTORY_URL=http://agntcy-directory:8500
AGNTCY_IDENTITY_ISSUER=miga
AGNTCY_IDENTITY_KEY_PATH=/run/secrets/agntcy_signing_key

# -- Cisco Catalyst Center ----------------------------------------------------
CATALYST_CENTER_BASE_URL=https://your-dnac.example.com
CATALYST_CENTER_USERNAME=admin
CATALYST_CENTER_PASSWORD=
CATALYST_CENTER_VERIFY_SSL=true

# -- Cisco Meraki Dashboard ---------------------------------------------------
MERAKI_API_KEY=
MERAKI_BASE_URL=https://api.meraki.com/api/v1
MERAKI_ORG_ID=

# -- Cisco ThousandEyes -------------------------------------------------------
THOUSANDEYES_API_TOKEN=
THOUSANDEYES_BASE_URL=https://api.thousandeyes.com/v7
THOUSANDEYES_AID=

# -- Cisco Webex (Bot + Platform) ---------------------------------------------
WEBEX_BOT_ACCESS_TOKEN=
WEBEX_BOT_NAME=MIGA
WEBEX_BOT_EMAIL=miga-bot@webex.bot
WEBEX_WEBHOOK_URL=https://your-public-url/webhooks/webex
WEBEX_API_BASE_URL=https://webexapis.com/v1

# -- Cisco XDR ----------------------------------------------------------------
XDR_CLIENT_ID=
XDR_CLIENT_SECRET=
XDR_BASE_URL=https://api.xdr.security.cisco.com

# -- Cisco Security Cloud Control ---------------------------------------------
SCC_API_TOKEN=
SCC_BASE_URL=https://api.security.cisco.com
SCC_TENANT_ID=

# -- INFER Engine -------------------------------------------------------------
INFER_VECTOR_STORE_PATH=/data/infer/vectors
INFER_MODEL_CACHE_PATH=/data/infer/models
INFER_CORRELATION_WINDOW_SECONDS=300
INFER_ANOMALY_SENSITIVITY=0.85

